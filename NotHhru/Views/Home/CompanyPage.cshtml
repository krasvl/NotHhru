@model NotHhru.ViewModels.CompanyPageViewModel

<div class="row justify-content-center">
    <div class="row col-10 p-4">
        <div class="col-8">
            <h3 class="text-dark">@Model.Name</h3>
            <div class="p-2">
                <vc:ad-list action="CompanyPage" controller="Home" ads="@Model.Ads" current-page="@ViewBag.currentPage" page-size="5" pageico-size="12"></vc:ad-list>
            </div>
        </div>
        <div class="col-4 text-center">
            <img src="@Model.Img" class="rounded-circle" style="width:200px;height:200px;" />
            <h5 class="text-success">@Model.Ads.Count() вакансий</h5>
        </div>
    </div>
</div>